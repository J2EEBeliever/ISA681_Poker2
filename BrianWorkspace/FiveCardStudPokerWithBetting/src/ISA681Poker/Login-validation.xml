<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.2//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

        

        <validators>

        <field name="userName">
        <field-validator type="regex">
            <param name="regex"><![CDATA[([a-zA-Z0-9]{11})]]></param>
            <message>Username must be AlphaNumeric.</message>
        </field-validator>
    </field>
            <field name="password">
        <field-validator type="regex">
            <param name="regex"><![CDATA[((?=^.{6,255}$)((?=.*\d)(?=.*[A-Z])(?=.*[a-z])|(?=.*\d)(?=.*[^A-Za-z0-9])(?=.*[a-z])|(?=.*[^A-Za-z0-9])(?=.*[A-Z])(?=.*[a-z])|(?=.*\d)(?=.*[A-Z])(?=.*[^A-Za-z0-9]))^.*)]]></param>
            <message>Password must Match 3 of 4 Character catagories: 1.) at least 1 upper case character 2.) at least 1 lower case character 3.) at least 1 numerical character 4.) at least 1 special character</message>
        </field-validator>
    </field>

    </validators>
