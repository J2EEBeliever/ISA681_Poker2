		public ActionForward execute(ActionMapping mapping, ActionForm actionForm,
		        HttpServletRequest request, HttpServletResponse response)
		        throws Exception {

			
		   
	      log.debug("Debug: AjaxAction:  execute()");
	      log.info("Info: AjaxAction: execute()");
	      
	      String actionType = request.getParameter("getPlayerContent");
	      
	      if(actionType != null && actionType.equalsIgnoreCase("yes")) {
	    	  PrintWriter printWritter = response.getWriter();
	    	  
	    	  printWritter.println("<BR><BR>Player1 cards (Ace Spaces, 2 Clubs, 2 Diamonds)<BR><BR>");
	    	  printWritter.println("<BR><BR>Player2 cards (King Diamonds, 3 Hearts, King Spades)<BR><BR>");
	    	  
	      }
	    	  
	      
	      
	      
	      return "success";
	      
	      
	   }
	   
	   
	   
	   
	   
	}
